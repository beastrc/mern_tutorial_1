{
  "parser": "babel-eslint",
  "rules": {
    "max-len": [
      "error",
      {
        "code": 100,
        "comments": 140,
        "tabWidth": 2,
        "ignorePattern": "^import.*from"
      }
    ],
    "curly": [2, "all"],
    "linebreak-style": [2, "unix"],
    "no-console": 0,
    "prettier/prettier": "error",
    "quotes": [2, "single"],
    "react/jsx-uses-react": 1,
    "react/display-name": 0,
    "react/jsx-uses-vars": 1,
    "react/no-children-prop": 0,
    "react/no-string-refs": 0,
    "react/prop-types": 0,
    "semi": [2, "always"],
    "prefer-const": "error"
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "globals": {
    "expect": true,
    "__non_webpack_require__": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "../eslintrc"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["babel", "react", "prettier"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
